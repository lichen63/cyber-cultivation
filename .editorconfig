# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# GDScript files
[*.gd]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false

# Configuration files
[*.{ini,cfg,toml}]
indent_style = space
indent_size = 2

# Godot project files
[project.godot]
indent_style = space
indent_size = 2

[*.tscn]
indent_style = space
indent_size = 2

[*.tres]
indent_style = space
indent_size = 2
